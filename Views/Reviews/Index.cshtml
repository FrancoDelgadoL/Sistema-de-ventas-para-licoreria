@model IEnumerable<Ezel_Market.Models.Review>

@{
    ViewData["Title"] = "Reseñas Generales";
}

<h2>@ViewData["Title"]</h2>

<!-- Botones de ordenamiento -->
<div class="mb-3">
    <strong>Ordenar por: </strong>
    <a asp-action="Index" asp-route-sortOrder="recent" class="btn btn-sm btn-outline-primary">Más recientes</a>
    <a asp-action="Index" asp-route-sortOrder="best" class="btn btn-sm btn-outline-success">Mejor calificadas</a>
</div>

<!-- Tabla de reseñas -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>Bebida</th>
            <th>Usuario</th>
            <th>Calificación</th>
            <th>Comentario</th>
            <th>Fecha</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var review in Model)
        {
            <tr>
                <td>@review.Inventario?.NombreProducto</td>
                <td>@review.Usuario</td>
                <td>@review.Calificacion / 5</td>
                <td>@review.Comentario</td>
                <td>@review.Fecha.ToString("dd/MM/yyyy")</td>
            </tr>
        }
    </tbody>
</table>

<hr />

<h3>Agregar nueva reseña</h3>

@{
    // Creamos un objeto Review temporal para el formulario
    var newReview = new Ezel_Market.Models.Review();
}

<form asp-action="AddReview" method="post" class="mb-3">
    @Html.AntiForgeryToken()

    <div class="mb-2">
        <label asp-for="@newReview.InventarioId" class="form-label">Bebida:</label>
        <select asp-for="@newReview.InventarioId" class="form-control" asp-items="ViewBag.Bebidas">
            <option value="">-- Seleccione una bebida --</option>
        </select>
        <span asp-validation-for="@newReview.InventarioId" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="@newReview.Calificacion" class="form-label">Calificación (1-5):</label>
        <input asp-for="@newReview.Calificacion" type="number" min="1" max="5" class="form-control" />
        <span asp-validation-for="@newReview.Calificacion" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="@newReview.Comentario" class="form-label">Comentario:</label>
        <textarea asp-for="@newReview.Comentario" class="form-control" rows="3"></textarea>
        <span asp-validation-for="@newReview.Comentario" class="text-danger"></span>
    </div>

    <!-- Usuario se toma automáticamente del login -->
    <input type="hidden" asp-for="@newReview.Usuario" value="@User.Identity.Name" />

    <button type="submit" class="btn btn-primary">Agregar Reseña</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
