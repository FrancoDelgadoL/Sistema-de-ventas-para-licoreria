@model Ezel_Market.Models.Inventario

@{
    ViewData["Title"] = "Editar Producto";
}

<h1>Editar producto</h1>

<div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

<!-- üîΩ IMPORTANTE: agregar enctype para subir archivos -->
<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="NombreProducto"></label>
        <input asp-for="NombreProducto" class="form-control" />
        <span asp-validation-for="NombreProducto" class="text-danger"></span>
    </div>

    @*<div class="form-group">
        <label asp-for="CategoriasId">Categor√≠a</label>
        <select asp-for="CategoriasId" class="form-control" asp-items="ViewBag.Categorias"></select>
        <span asp-validation-for="CategoriasId" class="text-danger"></span>
    </div>*@

    <div class="form-group">
        <label asp-for="Cantidad"></label>
        <input asp-for="Cantidad" class="form-control" type="number" min="0" />
        <span asp-validation-for="Cantidad" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PrecioCompra"></label>
        <div class="input-group">
            <span class="input-group-text">S/</span>
            <input asp-for="PrecioCompra" class="form-control" type="number" min="0" step="0.01" />
        </div>
        <span asp-validation-for="PrecioCompra" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PrecioVentaMinorista"></label>
        <div class="input-group">
            <span class="input-group-text">S/</span>
            <input asp-for="PrecioVentaMinorista" class="form-control" type="number" min="0" step="0.01" />
        </div>
        <span asp-validation-for="PrecioVentaMinorista" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PrecioVentaMayorista"></label>
        <div class="input-group">
            <span class="input-group-text">S/</span>
            <input asp-for="PrecioVentaMayorista" class="form-control" type="number" min="0" step="0.01" />
        </div>
        <span asp-validation-for="PrecioVentaMayorista" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FechaIngreso"></label>
        <input asp-for="FechaIngreso" class="form-control" type="date" />
        <span asp-validation-for="FechaIngreso" class="text-danger"></span>
    </div>

    <!-- üîΩ Mostrar imagen actual (si existe) -->
    @if (!string.IsNullOrEmpty(Model.Imagen))
    {
        <div class="form-group mt-3">
            <label>Imagen actual:</label>
            <br />
            <img src="@Model.Imagen" alt="Imagen del producto" width="180" class="border rounded" />
        </div>
    }

    <!-- üîΩ Campo para subir nueva imagen -->
    <div class="form-group mt-3">
        <label for="ImagenArchivo">Cambiar imagen (opcional):</label>
        <input type="file" name="ImagenArchivo" class="form-control" accept="image/*" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
