@model Ezel_Market.Models.Inventario

@{
    ViewData["Title"] = "Editar Producto";
}

<h1>Editar producto</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="NombreProducto"></label>
        <input asp-for="NombreProducto" class="form-control" />
        <span asp-validation-for="NombreProducto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoriasId"></label>
        <select asp-for="CategoriasId" class="form-control" asp-items="ViewBag.Categorias"></select>
        <span asp-validation-for="CategoriasId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Cantidad"></label>
        <input asp-for="Cantidad" class="form-control" />
        <span asp-validation-for="Cantidad" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PrecioCompra"></label>
        <div class="input-group">
            <span class="input-group-text">S/</span>
            <input asp-for="PrecioCompra" class="form-control" />
        </div>
        <span asp-validation-for="PrecioCompra" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PrecioVenta"></label>
        <div class="input-group">
            <span class="input-group-text">S/</span>
            <input asp-for="PrecioVenta" class="form-control" />
        </div>
        <span asp-validation-for="PrecioVenta" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FechaIngreso"></label>
        <input asp-for="FechaIngreso" class="form-control" type="date" />
        <span asp-validation-for="FechaIngreso" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
