@model IEnumerable<Ezel_Market.Models.Inventario>

@{
    ViewData["Title"] = "Inventario";
}

<h1>Gestión de Inventario</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">➕ Nuevo Producto</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Imagen</th>
            <th>Nombre</th>
            <th>Categoría</th>
            <th>Cantidad</th>
            <th>Precio Compra</th>
            <th>Precio Venta</th>
            <th>Fecha Ingreso</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.Imagen))
                    {
                        <img src="@Url.Content(item.Imagen)" alt="Imagen del producto" width="70" height="70" style="object-fit: cover; border-radius: 10px;" />
                    }
                    else
                    {
                        <span class="text-muted">Sin imagen</span>
                    }
                </td>
                <td>@item.NombreProducto</td>
                <td>@item.Categoria?.Nombre</td>
                <td>@item.Cantidad</td>
                <td>S/ @item.PrecioCompra.ToString("0.00")</td>
                <td>S/ @item.PrecioVenta.ToString("0.00")</td>
                <td>@item.FechaIngreso.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
